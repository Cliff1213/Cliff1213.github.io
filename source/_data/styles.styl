// 程式碼區塊圓角
figure.highlight {
  border-radius: 4px;
  overflow: hidden;
}


// 站內搜尋
  // 關鍵字
mark.search-keyword {
  border-bottom: 1px dashed #30a9de;
  color: #30a9de;
}
  // 內容文字
.search-result-list a {
  color: #707070;
}


// 文章目錄區塊
  // 標題文字 hover
.sidebar-nav li:hover {
    color: #89cffd;
}
  // 標題文字 active
.sidebar-toc-active .sidebar-nav-toc, .sidebar-overview-active .sidebar-nav-overview {
    border-bottom-color: #30a9de;
    color: #30a9de;
}
  // 標題文字 active hover
.sidebar-toc-active .sidebar-nav-toc:hover, .sidebar-overview-active .sidebar-nav-overview:hover {
    border-bottom-color: #89cffd;
    color: #89cffd;
}
  // 內容章節 active
.post-toc .nav .active > a {
    border-bottom-color: #30a9de;
    color: #30a9de;
}
  // 內容章節 hover
.post-toc .nav .active > a:hover {
    border-bottom-color: #89cffd;
    color: #89cffd;
}
  // 內容章節 active hover
.sidebar a:hover {
    border-bottom-color: #89cffd;
    color: #89cffd;
}

// 滾動軸
::-webkit-scrollbar {
  width: 5px;
  height: 4px;
  background: transparent;
}
::-webkit-scrollbar-track {
  margin: 0 12px;
}
::-webkit-scrollbar-thumb {
  background: #888;
}

// Read More 按鈕樣式
.post-button .btn {
  color: #555 !important;
  background-color: rgb(255, 255, 255);
  border-radius: 3px;
  font-size: 15px;
  box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
  border: none !important;
  transition-property: unset;
  padding: 0px 15px;
}
.post-button .btn:hover {
  box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
  background-image: linear-gradient(90deg, #eee 0%, #fff 25%, #fff 50%, #fff 75%, #eee 100%);
}

